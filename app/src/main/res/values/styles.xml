<resources>

    <attr name="drawerBackground" format="color"/>
    <attr name="editorBackground" format="color"/>

    <style name="AppTheme" parent="Theme.AppCompat">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#37474F</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#263238</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#00BCD4</item>

        <item name="drawerBackground">#f1090909</item>

        <!-- So we can see straight through to the default material background of the activity -->
        <item name="editorBackground">@android:color/transparent</item>

    </style>

    <style name="AppTheme.Trans.Dark" parent="AppTheme">

        <item name="drawerBackground">#f1090909</item>

        <item name="editorBackground">#77090909</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#26A69A</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#80CBC4</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent"> #00BCD4</item>

        <item name="drawerBackground">#ECEFF1</item>

        <!-- So we can see straight through to the default material background of the activity -->
        <item name="editorBackground">@android:color/transparent</item>

    </style>

    <style name="AppTheme.Trans.Light" parent="AppTheme.Light">

        <item name="drawerBackground">#ECEFF1</item>

        <item name="editorBackground">#77ECEFF1</item>

    </style>

</resources>
